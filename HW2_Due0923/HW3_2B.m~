clearvars; 

% parameter settings
l_list = 1:1:10;

meanlist = zeros(10,1);
varlist = zeros(10,1);

for l=l_list
    p = @(d) l*exp(-l*d);
    
    % mean = E(x) = \int x * p(x) dx
    
    p_d = @(d) l*exp(-l*d) .* d;
    meanlist(l) = integral( p_d,0,Inf);
    
    % variance = E(x^2) - E(x)^2
    %          = \int x^2 * p(x) dx - mean ^2
    
    p_d2 = @(d) l*exp(-l*d) .* d .*d;
    varlist(l) = integral(p_d2,0,Inf) - meanlist(l)^2;
    
end

plot(l_list,mean)
