n = 40;
l = [1 zeros(1,n-1)]; 
c = [1 1 zeros(1,n-2)];
G = toeplitz(c,l); 

sig_d = 1;
I = eye(n,n);

covar_d = sig_d ^ 2 * I;
M = I / (G' * G) * G';
covar_m = M * covar_d * M';

sig_m = zeros(n,1);
for i = 1:n
    sig_m(i) = covar_m(i,i)^0.5 ;
end

set(gca,'FontSize',14,'LineW)
plot(1:n,sig_m,"LineWidth",2);
xlabel("j");
ylabel(sprintf("\\sigma_{mj}"));